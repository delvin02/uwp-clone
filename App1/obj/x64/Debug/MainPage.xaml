<Page x:ConnectionId='1'
    x:Class="App1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"                     
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="LightGray" HorizontalAlignment="Stretch" >
        <StackPanel Orientation="Vertical">
            <TextBlock Height="72"
                Foreground="Black"
                       Margin="15"
                FontSize="50"
                TextAlignment="center"
                FontWeight="Bold" 
        FontFamily="Arial" Text="Dodgy Brothers Motor Manager" TextWrapping="Wrap"/>
        </StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="9*" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Column="0" Grid.Row="0" RenderTransformOrigin="0.471,0.5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="175*"/>
                    <ColumnDefinition Width="150*"/>
                    <ColumnDefinition Width="600*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>



                <TextBlock HorizontalAlignment="Center" Grid.Column="0" Grid.Row="1" 
                   Foreground="Black"
                   FontSize="20"
                   TextAlignment="Left"
                   FontWeight="light" 
           FontFamily="Arial" Text="Customer Name" TextWrapping="Wrap" VerticalAlignment="Center" Width="200" Grid.ColumnSpan="2"/>
                <TextBlock HorizontalAlignment="Center" Grid.Column="0" Grid.Row="2"
                   Foreground="Black"
                   FontSize="20"
                   TextAlignment="Left"
                   FontWeight="light" 
           FontFamily="Arial" Text="Customer Phone" TextWrapping="Wrap" VerticalAlignment="Center" Width="200" Grid.ColumnSpan="2"/>
                <TextBlock HorizontalAlignment="Center" Grid.Column="0" Grid.Row="3"
                   Foreground="Black"
                   FontSize="20"
                   TextAlignment="left"
                   FontWeight="light" 
           FontFamily="Arial" Text="Vehicle Price" TextWrapping="Wrap" Width="200" VerticalAlignment="Center"  RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" Grid.ColumnSpan="2">
                    <TextBlock.RenderTransform>
                        <CompositeTransform Rotation="0.258"/>
                    </TextBlock.RenderTransform>
                </TextBlock>
                <TextBlock HorizontalAlignment="Center"  Grid.Column="0" Grid.Row="5"
                   Foreground="Black"
                   FontSize="20"
                   TextAlignment="left"
                   FontWeight="light" 
           FontFamily="Arial" Text="Vehicle Warranty " TextWrapping="Wrap" VerticalAlignment="Center" Width="200" Grid.ColumnSpan="2"/>
                <TextBlock HorizontalAlignment="Center"  Grid.Column="0" Grid.Row="6"
                   Foreground="Black"
                   FontSize="20"
                   TextAlignment="left"
                   FontWeight="light" 
           FontFamily="Arial" Text="Optional Extras " TextWrapping="Wrap" VerticalAlignment="Center" Width="200" Grid.ColumnSpan="2"/>
                <TextBlock HorizontalAlignment="Center"  Grid.Column="0" Grid.Row="7"
                   Foreground="Black"
                   FontSize="20"
                   TextAlignment="left"
                   FontWeight="light" 
           FontFamily="Arial" Text="Insurance Policy " TextWrapping="Wrap" VerticalAlignment="Center" Width="200" Grid.ColumnSpan="2"/>
                <TextBlock HorizontalAlignment="Center"  Grid.Column="0" Grid.Row="8"
                   Foreground="Black"
                   FontSize="20"
                   TextAlignment="Left"
                   FontWeight="light" 
           FontFamily="Arial" Text="Collection Date " TextWrapping="Wrap" VerticalAlignment="Center" Width="200" Grid.ColumnSpan="2"/>
                <TextBlock HorizontalAlignment="Center"  Grid.Column="0" Grid.Row="9"
                   Foreground="Black"
                   FontSize="20"
                   TextAlignment="Left"
                   FontWeight="light" 
           FontFamily="Arial" Text="Pickup Time " TextWrapping="Wrap" VerticalAlignment="Center" Width="200" Grid.ColumnSpan="2"/>
                <TextBlock HorizontalAlignment="Center" Grid.Column="0" Grid.Row="4"
                   Foreground="Black"
                   FontSize="20"
                   TextAlignment="left"
                   FontWeight="light" 
           FontFamily="Arial" Text="Less Trade In " TextWrapping="Wrap" Width="200" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
                <TextBlock HorizontalAlignment="Center" Grid.Column="0" Grid.Row="10"
                   Foreground="Black"
                   FontSize="20"
                   TextAlignment="left"
                   FontWeight="light" 
           FontFamily="Arial" Text="Sub Amount " TextWrapping="Wrap" VerticalAlignment="Center" Width="200" Grid.ColumnSpan="2"/>
                <TextBlock HorizontalAlignment="Center" Grid.Column="0" Grid.Row="11"
                   Foreground="Black"
                   FontSize="20"
                   TextAlignment="left"
                   FontWeight="light" 
           FontFamily="Arial" Text="GST Amount " TextWrapping="Wrap" VerticalAlignment="Center" Width="200" Grid.ColumnSpan="2"/>
                <TextBlock HorizontalAlignment="Center"  Grid.Column="0" Grid.Row="12"
                   Foreground="Black"
                   FontSize="20"
                   TextAlignment="left"
                   FontWeight="light" 
           FontFamily="Arial" Text="Final Amount " TextWrapping="Wrap" VerticalAlignment="Center" Width="200" Grid.ColumnSpan="2"/>


                <TextBox x:ConnectionId='19' x:Name="customerName" HorizontalAlignment="Left" Height="auto" Grid.Column="2" Grid.Row="1" PlaceholderText="Required" TextAlignment="Center" FontSize="15" VerticalAlignment="Top" Width="427" />
                <TextBox x:ConnectionId='20' x:Name="vechicleCost" HorizontalAlignment="Left" Height="auto" Grid.Column="2" Grid.Row="3"  PlaceholderText="Required" TextAlignment="Center" FontSize="15" VerticalAlignment="Top" Width="427"  />
                <TextBox x:ConnectionId='21' x:Name="handphoneNumber" HorizontalAlignment="Left"  Height="auto"  Grid.Column="2" Grid.Row="2"  PlaceholderText="Required" TextAlignment="Center" FontSize="15" TextWrapping="Wrap" VerticalAlignment="Top" Width="427"  />
                <TextBox x:ConnectionId='22' x:Name="tradein" HorizontalAlignment="Left" Height="auto" Grid.Column="2" Grid.Row="4"  PlaceholderText="Optional" TextAlignment="Center" FontSize="15" TextWrapping="Wrap" VerticalAlignment="Top" Width="427" />
                <ComboBox x:ConnectionId='23' x:Name="warranty" Grid.Column="2" Grid.Row="5" Height="auto" Width="427" FontSize="15">
                    <ComboBoxItem IsSelected="True">1 year warranty has no charge</ComboBoxItem>
                    <ComboBoxItem>2 years at 5% of the vechicle cost</ComboBoxItem>
                    <ComboBoxItem>3 years at 10% of the vechicle cost</ComboBoxItem>
                    <ComboBoxItem>5 years at 20% of the vechicle cost</ComboBoxItem>
                </ComboBox>
                <StackPanel Grid.Column="2" Grid.Row="6" Spacing="5" Orientation="Horizontal">
                    <CheckBox x:ConnectionId='33' x:Name="window" Content="Window Tinting ($150)" FontSize="8" VerticalAlignment="Center"/>
                    <CheckBox x:ConnectionId='34' x:Name="duco" Content="Duco Protection ($180)" FontSize="8" VerticalAlignment="Center"/>
                    <CheckBox x:ConnectionId='35' x:Name="floor" Content="Floor Mats ($320)" FontSize="8" VerticalAlignment="Center"/>
                    <CheckBox x:ConnectionId='36' x:Name="sound" Content="Deluxe Sound System ($350)" FontSize="8" VerticalAlignment="Center"/>
                </StackPanel>
                <Grid Grid.Column="2" Grid.Row="7">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="60*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50*" />
                        <RowDefinition Height="50*" />
                    </Grid.RowDefinitions>
                    <ToggleSwitch x:ConnectionId='30' x:Name="insuranceToggle" Width="auto" Grid.Row="0" HorizontalAlignment="Center" Height="30"                                  />
                    <RadioButton x:ConnectionId='31' x:Name="AgeUnder" IsChecked="True" Visibility="Collapsed" FontSize="9" Grid.Column="1" Grid.Row="0" Content="drivers under age 25 may purchase 1 year insurance for 20% of vehicle price" Height="30" />
                    <RadioButton x:ConnectionId='32' x:Name="AgeAbove" Visibility="Collapsed" FontSize="9" Grid.Column="1" Grid.Row="1" Content="older drivers (&gt;=25) may purchase for 10% of vehicle price" Height="30" />
                </Grid>
                <DatePicker Grid.Column="2" Grid.Row="8"></DatePicker>
                <TimePicker Grid.Column="2" Grid.Row="9"/>
                <TextBlock x:ConnectionId='24' x:Name="finalAmountTotal" HorizontalAlignment="Left" Height="34" Grid.Column="2" Grid.Row="12" FontWeight="Bold" TextDecorations="Underline" Foreground="Red" Text="0" TextWrapping="Wrap" TextAlignment="Center" FontSize="20" Width="427" VerticalAlignment="Top"/>
                <TextBlock x:ConnectionId='25' x:Name="gstAmountTotal" HorizontalAlignment="Left" Height="34" Grid.Column="2" Grid.Row="11"  Foreground="Black" Text="0" TextWrapping="Wrap" TextAlignment="Center" FontSize="20" Width="427" VerticalAlignment="Top"/>
                <TextBlock x:ConnectionId='26' x:Name="subAmountTotal" HorizontalAlignment="Left" Height="34" Grid.Column="2" Grid.Row="10"  Foreground="Black" Text="0" TextWrapping="Wrap" TextAlignment="Center" FontSize="20" Width="427" VerticalAlignment="Top" />
                <Grid Grid.Row="13" Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="45" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="45" />
                    </Grid.RowDefinitions>

                    <Button x:ConnectionId='27'                   Content="Summary" Height="35" Background="blue" Foreground="White" Grid.Row="0" FontWeight="Bold" CornerRadius="5" Width="427"  VerticalAlignment="Top" />
                    <Button x:ConnectionId='28'               Content="Reset" Height="35" Background="blue" Foreground="White" FontWeight="Bold" CornerRadius="10"  VerticalAlignment="Top" Width="427" Grid.Row="1" />
                    <Button x:ConnectionId='29'              Content="Save" Height="35" Background="Blue" CornerRadius="10" Foreground="White" FontWeight="Bold" VerticalAlignment="Top" Width="427" Grid.Row="2"/>
                </Grid>

            </Grid>
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="4*"/>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <Image x:ConnectionId='10' x:Name="car" Height="195" Width="290" Grid.Row="0" Source="/Assets/car.png" />
                <Border Grid.Row="1" Height="400px" Background="White">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="2*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Summary Data display here" FontSize="18px" TextAlignment="Center"/>
                        <TextBlock x:ConnectionId='11' x:Name="customerNameBlock" Grid.Row="1" Text="Customer Name" FontSize="15px" TextAlignment="Center"/>
                        <TextBlock x:ConnectionId='12' x:Name="phoneNumberBlock" Grid.Row="2" Text="Phone" FontSize="15px" TextAlignment="Center"/>
                        <TextBlock x:ConnectionId='13' x:Name="vehicleCostBlock" Grid.Row="3" Text="Vehicle Cost" FontSize="15px" TextAlignment="Center"/>
                        <TextBlock x:ConnectionId='14' x:Name="tradeInBlock" Grid.Row="4" Text="Trade-in Amount" FontSize="15px" TextAlignment="Center"/>
                        <TextBlock x:ConnectionId='15' x:Name="warrantyCostBlock" Grid.Row="5" Text="Warranty Cost" FontSize="15px" TextAlignment="Center"/>
                        <TextBlock x:ConnectionId='16' x:Name="extraCostBlock" Grid.Row="6" Text="Optional Extras Cost" FontSize="15px" TextAlignment="Center"/>
                        <TextBlock x:ConnectionId='17' x:Name="insuranceCostBlock" Grid.Row="7" Text="Insurance Cost" FontSize="15px" TextAlignment="Center"/>
                        <TextBlock x:ConnectionId='18' x:Name="finalAmountBlock" Grid.Row="8" Text="Final Amount" FontSize="15px" TextAlignment="Center"/>
                    </Grid>
                </Border>
                <TextBlock Text="Designed By: Weei Waai Khor 001174793" Grid.Row="2" TextAlignment="Center" TextWrapping="Wrap" FontSize="16"/>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="90"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Button x:ConnectionId='4' x:Name="displayNamesButton" Content="Display Names" Background="Blue" Foreground="White" Grid.Row="1" FontWeight="Bold" CornerRadius="5" VerticalAlignment="Center" Margin="10 0"                                 />
                <Button x:ConnectionId='5' x:Name="searchNameButton" Content="Search Name" Background="Blue" Foreground="White" Grid.Row="2" FontWeight="Bold" CornerRadius="5" VerticalAlignment="Center" Margin="10 0"                               />
                <Button x:ConnectionId='6' x:Name="deleteNameButton" Content="Delete Name" Background="Blue" Foreground="White" Grid.Row="3" FontWeight="Bold" CornerRadius="5" VerticalAlignment="Center" Margin="10 0"                               />
                <Button x:ConnectionId='7' x:Name="displayAllMakesButton" Content="Display all Makes" Background="Blue" Foreground="White" Grid.Row="4" FontWeight="Bold" CornerRadius="5" VerticalAlignment="Center" Margin="10 0"                                    />
                <Button x:ConnectionId='8' x:Name="binarySearchButton" Content="Binary Search (Binary Make)" Background="Blue" Foreground="White" Grid.Row="5" FontWeight="Bold" CornerRadius="5" VerticalAlignment="Center" Margin="10 0"                                 />
                <Button x:ConnectionId='9' x:Name="insertVehicleButton" Content="Insert Vehicle (Vehicle Make)" Background="Blue" Foreground="White" Grid.Row="6" FontWeight="Bold" CornerRadius="5" VerticalAlignment="Center" Margin="10 0"                                  />
            </Grid>
            <Grid Grid.Row="1" Grid.Column="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="90"/>
                    <RowDefinition Height="0.4*"/>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="1" Text="Result" FontSize="30px" TextAlignment="Left"/>
                <Grid Grid.Row="2" Grid.Column="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="9*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <TextBlock x:ConnectionId='2' x:Name="ResultTextBlock" Grid.Row="0" Text="" FontSize="15px" TextAlignment="Left"/>
                    <TextBlock Grid.Row="1" Text="Input All Makes" FontSize="20px" TextAlignment="Left"/>
                    <TextBox x:ConnectionId='3' x:Name="UserInputTextBox"  Height="auto" Grid.Row="2" HorizontalAlignment="Stretch" PlaceholderText="Input All Makes" TextAlignment="Center" FontSize="15" VerticalAlignment="Top" />
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>

