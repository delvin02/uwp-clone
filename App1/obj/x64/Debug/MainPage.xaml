<Page
    x:Class="App1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="LightGray" HorizontalAlignment="Stretch" >
        <StackPanel Orientation="Vertical">
            <TextBlock Height="72"
                Foreground="Black"
                       Margin="15"
                FontSize="50"
                TextAlignment="center"
                FontWeight="Bold" 
        FontFamily="Arial" Text="Dodgy Brothers Motor Manager" TextWrapping="Wrap"/>
        </StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Column="0" Grid.Row="0" RenderTransformOrigin="0.471,0.5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="60*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>



                <TextBlock HorizontalAlignment="Left" Grid.Column="0" Grid.Row="1" 
                   Foreground="Black"
                   FontSize="20"
                   TextAlignment="left"
                   FontWeight="light" 
           FontFamily="Arial" Text="Customer Name" TextWrapping="Wrap" VerticalAlignment="Center" Margin="120 0" Width="188"/>
                <TextBlock HorizontalAlignment="Left" Grid.Column="0" Grid.Row="2"
                   Foreground="Black"
                   FontSize="20"
                   TextAlignment="left"
                   FontWeight="light" 
           FontFamily="Arial" Text="Customer Phone" TextWrapping="Wrap" VerticalAlignment="Center" Margin="120 0" />
                <TextBlock HorizontalAlignment="Left" Grid.Column="0" Grid.Row="3"
                   Foreground="Black"
                   FontSize="20"
                   TextAlignment="left"
                   FontWeight="light" 
           FontFamily="Arial" Text="Vehicle Price" TextWrapping="Wrap" VerticalAlignment="Center" Margin="120 0"  RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto">
                    <TextBlock.RenderTransform>
                        <CompositeTransform Rotation="0.258"/>
                    </TextBlock.RenderTransform>
                </TextBlock>
                <TextBlock HorizontalAlignment="Left"  Grid.Column="0" Grid.Row="5"
                   Foreground="Black"
                   FontSize="20"
                   TextAlignment="left"
                   FontWeight="light" 
           FontFamily="Arial" Text="Vehicle Warranty " TextWrapping="Wrap" VerticalAlignment="Center" Margin="120 0"/>
                <TextBlock HorizontalAlignment="Left"  Grid.Column="0" Grid.Row="6"
                   Foreground="Black"
                   FontSize="20"
                   TextAlignment="left"
                   FontWeight="light" 
           FontFamily="Arial" Text="Optional Extras " TextWrapping="Wrap" VerticalAlignment="Center" Margin="120 0"/>
                <TextBlock HorizontalAlignment="Left"  Grid.Column="0" Grid.Row="7"
                   Foreground="Black"
                   FontSize="20"
                   TextAlignment="left"
                   FontWeight="light" 
           FontFamily="Arial" Text="Insurance Policy " TextWrapping="Wrap" VerticalAlignment="Center" Margin="120 0"/>
                <TextBlock HorizontalAlignment="Left"  Grid.Column="0" Grid.Row="8"
                   Foreground="Black"
                   FontSize="20"
                   TextAlignment="left"
                   FontWeight="light" 
           FontFamily="Arial" Text="Collection Date " TextWrapping="Wrap" VerticalAlignment="Center" Margin="120 0"/>
                <TextBlock HorizontalAlignment="Left"  Grid.Column="0" Grid.Row="9"
                   Foreground="Black"
                   FontSize="20"
                   TextAlignment="left"
                   FontWeight="light" 
           FontFamily="Arial" Text="Pickup Time " TextWrapping="Wrap" VerticalAlignment="Center" Margin="120 0"/>
                <TextBlock HorizontalAlignment="Left" Grid.Column="0" Grid.Row="4"
                   Foreground="Black"
                   FontSize="20"
                   TextAlignment="left"
                   FontWeight="light" 
           FontFamily="Arial" Text="Less Trade In " TextWrapping="Wrap" VerticalAlignment="Center" Margin="120 0" />
                <TextBlock HorizontalAlignment="Left" Grid.Column="0" Grid.Row="10"
                   Foreground="Black"
                   FontSize="20"
                   TextAlignment="left"
                   FontWeight="light" 
           FontFamily="Arial" Text="Sub Amount " TextWrapping="Wrap" VerticalAlignment="Bottom" Margin="120,0,0,8" />
                <TextBlock HorizontalAlignment="Left" Grid.Column="0" Grid.Row="11"
                   Foreground="Black"
                   FontSize="20"
                   TextAlignment="left"
                   FontWeight="light" 
           FontFamily="Arial" Text="GST Amount " TextWrapping="Wrap" VerticalAlignment="Center" Margin="120 0" />
                <TextBlock HorizontalAlignment="Left"  Grid.Column="0" Grid.Row="12"
                   Foreground="Black"
                   FontSize="20"
                   TextAlignment="left"
                   FontWeight="light" 
           FontFamily="Arial" Text="Final Amount " TextWrapping="Wrap" VerticalAlignment="Center" Margin="120 0"/>


                <TextBox x:ConnectionId='3' x:Name="customerName" HorizontalAlignment="Left" Height="auto" Grid.Column="1" Grid.Row="1" PlaceholderText="Required" TextAlignment="Center" FontSize="15" VerticalAlignment="Top" Width="427" />
                <TextBox x:ConnectionId='4' x:Name="vechicleCost" HorizontalAlignment="Left" Height="auto" Grid.Column="1" Grid.Row="3"  PlaceholderText="Required" TextAlignment="Center" FontSize="15" VerticalAlignment="Top" Width="427"  />
                <TextBox x:ConnectionId='5' x:Name="handphoneNumber" HorizontalAlignment="Left"  Height="auto"  Grid.Column="1" Grid.Row="2"  PlaceholderText="Required" TextAlignment="Center" FontSize="15" TextWrapping="Wrap" VerticalAlignment="Top" Width="427"  />
                <TextBox x:ConnectionId='6' x:Name="tradein" HorizontalAlignment="Left" Height="auto" Grid.Column="1" Grid.Row="4"  PlaceholderText="Optional" TextAlignment="Center" FontSize="15" TextWrapping="Wrap" VerticalAlignment="Top" Width="427" />
                <ComboBox x:ConnectionId='7' x:Name="warranty" Grid.Column="1" Grid.Row="5" Height="auto" Width="427" FontSize="15">
                    <ComboBoxItem IsSelected="True">1 year warranty has no charge</ComboBoxItem>
                    <ComboBoxItem>2 years at 5% of the vechicle cost</ComboBoxItem>
                    <ComboBoxItem>3 years at 10% of the vechicle cost</ComboBoxItem>
                    <ComboBoxItem>5 years at 20% of the vechicle cost</ComboBoxItem>
                </ComboBox>
                <StackPanel Grid.Column="1" Grid.Row="6" Spacing="5" Orientation="Horizontal">
                    <CheckBox x:ConnectionId='17' x:Name="window" Content="Window Tinting ($150)" FontSize="8"  VerticalAlignment="Center"/>
                    <CheckBox x:ConnectionId='18' x:Name="duco" Content="Duco Protection ($180)" FontSize="8" VerticalAlignment="Center"/>
                    <CheckBox x:ConnectionId='19' x:Name="floor" Content="Floor Mats ($320)" FontSize="8" VerticalAlignment="Center"/>
                    <CheckBox x:ConnectionId='20' x:Name="sound" Content="Deluxe Sound System ($350)" FontSize="8" VerticalAlignment="Center"/>
                </StackPanel>
                <Grid Grid.Column="1" Grid.Row="7">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="60*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50*" />
                        <RowDefinition Height="50*" />
                    </Grid.RowDefinitions>
                    <ToggleSwitch x:ConnectionId='14' x:Name="insuranceToggle" Width="auto" Grid.Row="0" HorizontalAlignment="Center" Height="30"                                  />
                    <RadioButton x:ConnectionId='15' x:Name="AgeUnder" IsChecked="True" Visibility="Collapsed" FontSize="9" Grid.Column="1" Grid.Row="0" Content="drivers under age 25 may purchase 1 year insurance for 20% of vehicle price" Height="30" />
                    <RadioButton x:ConnectionId='16' x:Name="AgeAbove" Visibility="Collapsed" FontSize="9" Grid.Column="1" Grid.Row="1" Content="older drivers (&gt;=25) may purchase for 10% of vehicle price" Height="30" />
                </Grid>
                <DatePicker Grid.Column="1" Grid.Row="8"></DatePicker>
                <TimePicker Grid.Column="1" Grid.Row="9"/>
                <TextBlock x:ConnectionId='8' x:Name="finalAmountTotal" HorizontalAlignment="Left" Height="34" Grid.Column="1" Grid.Row="12" FontWeight="Bold" TextDecorations="Underline" Foreground="Red" Text="0" TextWrapping="Wrap" TextAlignment="Center" FontSize="20" Width="427" VerticalAlignment="Top"/>
                <TextBlock x:ConnectionId='9' x:Name="gstAmountTotal" HorizontalAlignment="Left" Height="34" Grid.Column="1" Grid.Row="11"  Foreground="Black" Text="0" TextWrapping="Wrap" TextAlignment="Center" FontSize="20" Width="427" VerticalAlignment="Top"/>
                <TextBlock x:ConnectionId='10' x:Name="subAmountTotal" HorizontalAlignment="Left" Height="34" Grid.Column="1" Grid.Row="10"  Foreground="Black" Text="0" TextWrapping="Wrap" TextAlignment="Center" FontSize="20" Width="427" VerticalAlignment="Top" />
                <Grid Grid.Row="13" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="45" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="45" />
                    </Grid.RowDefinitions>

                    <Button x:ConnectionId='11'                   Content="Summary" Height="35" Background="blue" Foreground="White" Grid.Row="0" FontWeight="Bold" CornerRadius="5" Width="427"  VerticalAlignment="Top" />
                    <Button x:ConnectionId='12'               Content="Reset" Height="35" Background="blue" Foreground="White" FontWeight="Bold" CornerRadius="10"  VerticalAlignment="Top" Width="427" Grid.Row="1" />
                    <Button x:ConnectionId='13'              Content="Save" Height="35" Background="Blue" CornerRadius="10" Foreground="White" FontWeight="Bold" VerticalAlignment="Top" Width="427" Grid.Row="2"/>
                </Grid>

            </Grid>
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="4*"/>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <Image x:ConnectionId='2' x:Name="car" Height="195" Width="290" Grid.Row="0" Source="/Assets/car.png" />
                <Border Grid.Row="1" Height="400px" Background="White">
                    <TextBlock Text="Summary Data display here" TextAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="Designed By: Weei Waai Khor 001174793" Grid.Row="2" TextAlignment="Center" TextWrapping="Wrap" FontSize="16"/>
            </Grid>

        </Grid>
    </Grid>
</Page>

